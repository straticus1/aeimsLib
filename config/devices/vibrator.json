{
  "type": "vibrator",
  "name": "Generic Vibrator",
  "description": "A generic vibrator device with basic vibration control",
  "version": "1.0.0",
  "features": [
    {
      "id": "vibration",
      "name": "Vibration Control",
      "description": "Control vibration intensity and patterns",
      "experimental": false,
      "requiresAuth": false,
      "parameters": [
        {
          "id": "intensity",
          "name": "Intensity",
          "type": "number",
          "min": 0,
          "max": 100,
          "default": 50
        },
        {
          "id": "pattern",
          "name": "Pattern",
          "type": "string",
          "default": "constant"
        },
        {
          "id": "duration",
          "name": "Duration",
          "type": "number",
          "min": 100,
          "max": 60000,
          "default": 1000
        }
      ]
    },
    {
      "id": "battery_monitoring",
      "name": "Battery Monitoring",
      "description": "Monitor device battery level",
      "experimental": false,
      "requiresAuth": false
    },
    {
      "id": "connection_status",
      "name": "Connection Status",
      "description": "Monitor device connection status",
      "experimental": false,
      "requiresAuth": false
    },
    {
      "id": "advanced_patterns",
      "name": "Advanced Patterns",
      "description": "Support for complex vibration patterns",
      "experimental": true,
      "requiresAuth": true,
      "parameters": [
        {
          "id": "pattern_type",
          "name": "Pattern Type",
          "type": "string",
          "default": "wave"
        },
        {
          "id": "frequency",
          "name": "Frequency",
          "type": "number",
          "min": 0.1,
          "max": 10.0,
          "default": 1.0
        }
      ]
    }
  ],
  "pricing": {
    "baseRate": 0.10,
    "featureRates": {
      "vibration": 0.05,
      "battery_monitoring": 0.01,
      "connection_status": 0.01,
      "advanced_patterns": 0.20
    },
    "currency": "USD",
    "billingPeriod": "hourly",
    "minimumCharge": 0.01,
    "enterpriseDiscount": 0.15
  },
  "requirements": {
    "minFirmware": "1.0.0",
    "maxFirmware": "2.0.0",
    "dependencies": ["bluetooth", "battery_sensor"]
  }
}