# Server Configuration
PORT=3000
NODE_ENV=development

# WebSocket Configuration
WS_PORT=8080
WS_HOST=0.0.0.0
WS_PATH=/ws
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000
WS_RATE_LIMIT_WINDOW=60000
WS_RATE_LIMIT_MAX=60

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# Encryption
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_SIZE=32
ENCRYPTION_AUTH_TAG_LENGTH=16

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=60

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=5000
MONITORING_RETENTION=3600000
METRICS_PREFIX=aeimslib

# Alerts
ALERTS_ENABLED=true
ALERT_ENDPOINTS=http://alertmanager:9093/api/v1/alerts
ALERT_ERROR_RATE=0.1
ALERT_LATENCY=2.0
ALERT_DEVICE_ERRORS=5
ALERT_CONNECTION_DROP=20

# Audit
AUDIT_RETENTION=30
AUDIT_DETAIL_LEVEL=basic # basic or detailed

# Redis Configuration (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
#REDIS_PASSWORD=

# Logging
LOG_LEVEL=info # debug, info, warn, error
